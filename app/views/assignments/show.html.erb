<ul>


  <div id="content_left" class="all">
    <div class="content-header clearfix">
      <h2>Discussions</h2>
      <%= link_to "+ Add Discussion", new_discussion_path(:assignment_id => @assignment.id), :class => "alr button" -%>

    </div>
    <ul id="departments">
      <% @discussions.each do |d| %>
      <li  class="clearfix">
	<%= link_to d.title, discussion_path(d) -%>
	<div class="edit-holder alr">
	  <ul  class = "edit-box">
	    <li>
	      <%= link_to "Edit", edit_discussion_path(:assignment_id => d.assignment_id), :class =>"edit-but" %>

            <ul class="edit-sub">
              <li>

                <%= link_to "Edit", edit_discussion_path(d) -%>
              </li>
              <li>
                <%= link_to "Delete", discussion_path(d), :method => :delete -%>
              </li>
	    </ul>
	    </li>
	  </ul>
	</div>
<% end %>
</div>
    </ul>
</ul>



