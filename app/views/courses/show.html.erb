<div>
  <h3><%= link_to "Department", departments_path -%> >> <%= link_to @department.name -%> >> <%= link_to @program.name -%> <%= link_to @course.name -%><h3>
  <div id="dpt_header" class="clearfix">
    <h4>CourseSessions</h4>
    <%= link_to "+ Add Course Sessions", new_course_session_path(:course_id => @course), :class => "alr button" -%>
  </div>
  <ul id="departments">
    <% @courseSessions.each do |c| -%>
    <li class="clearfix">
	    <%= c.name -%>
	    <div class="edit-holder alr">
	      <ul class="edit-box">
	        <li>
	          <%= link_to "Edit", "", :class => "edit-but" -%>
	          <ul class="edit-sub">
		          <li> <%= link_to "Edit", edit_courseSession_path(c,  :course_id => @course) -%></li>
		          <li> <%= link_to "Delete", courseSession_path(c, :course_id => @course ), :method => :delete -%></li>
	          </ul>
	        </li>
	      </ul>
	    </div>
    </li>
    <% end %>
  </ul>
</div>
