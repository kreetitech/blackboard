

<ul>


  <div id="content_left" class="all">
    <div id="dpt_header" class="clearfix">
      <h4 class="all">Departments</h4>
      <%= link_to "+ Add Department", new_department_path, :class => "alr button" -%>

    </div>
    <ul id="departments">
      <% @departments.each do |d| %>
      <li id="pg" class="clearfix">
	<%= link_to d.name, department_path(d) -%>
	<div class="edit-holder alr">
	  <ul  class = "edit-box">
	    <li>
	      <%= link_to "Edit", edit_department_path(d), :class =>"edit-but" %>

            <ul class="edit-sub">
              <li>

                <%= link_to "Edit", edit_department_path(d) -%>
              </li>
              <li>
                <%= link_to "Delete", department_path(d), :method => :delete -%>
              </li>
	    </ul>
	    </li>
	  </ul>
	</div>
<% end %>
</div>
    </ul>
</ul>



