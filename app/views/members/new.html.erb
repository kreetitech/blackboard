
<div id="navigation">
  <div id="main_tabs" class="clearfix">
    <ul>

      <%= link_to "Departments", departments_path -%>

      <%= link_to "Faculty", members_path -%>

      <%= link_to "Students", members_path -%>

      <div id="regis" class="all">
        <div id="add_faculty" class="clearfix">
          <h4 class="all">Add Faculty</h4>
      </div></div>

      <%= form_for :user, :url => members_path, :method => :post do |f| %>
      <h4 class="all">User Info</h4>

      <label for="member_first_name" >First name*</label>
      <%= f.text_field :first_name -%>

      <label for="member_last_name" >Last name*</label>
      <%= f.text_field :last_name -%>

      <label for="member_password">Password*</label>
      <%= f.text_field :password -%>

      <label for="member_password_confirmation">Password confirmation*</label>
      <%= f.text_field :password_confirmation -%>

      <label for="member_email">Email*</label>
      <%= f.text_field :email -%>


      <%= fields_for :profile do |p| %>

      <label>Title*</label>
      <%= select_tag "title", "<option>Mr.</option><option>Mrs.</option><option>Miss</option>" -%>



      <% end %>



      <h4 class="all">Personal Info</h4>

      <label for="member_father's_name">Father's Name</label>
      <%= f.text_field :father_name -%>

      <label for="member_nationality">Mother's Name</label>
      <%= f.text_field :mother_name -%>

      <label>Date Of Birth</label>
      <%= select_tag "Date", "<option></option><option></option>" %></select>
<%= select_tag "Month", "<option></option><option></option>" %></select>
<%= select_tag "Year", "<option></option><option></option>"-%></select>

<label>Gender</label>
<%= select_tag "gender", "<option>Male</option><option>Female</option>"-%></select>


<label for="member_nationality">Nationality</label>
<%= f.text_field :nationality -%>



<label for="member_admission">Admission</label>
<%= f.text_field :admission -%>


<h4 class="all">Contact Info</h4>
<%= fields_for :address do |d| %>

<label for="member_address">Address</label>
<%= d.text_field :address -%>

<label for="member_zip_code">Zip code</label>
<%= d.text_field :zip_code -%>

<label for="member_city">City</label>
<%= d.text_field :city -%>

<label for="member_state">State</label>
<%= d.text_field :state -%>

<label for="member_country">Country</label>
<%= d.text_field :country -%>

<label for="member_phone">Phone</label>
<%= d.text_field :phone -%>
<% end %>

<h4 class="all">Academic Info</h4>

<label>Department</label>
<%= select_tag "Department*" ""-%></select>
<label>Programme</label>
<%= select_tag "Programme*" "" -%></select>

<label>Course</label>
<%= select_tag "Course*" "" -%></select>


<%= f.submit "submit" -%>
<% end %>
